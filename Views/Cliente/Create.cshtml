@model CRUD.ViewModel.ClienteViewModel

<div class="row" style="padding-top:60px;">
    <div class="card col-8 offset-1" style="width: 70%;">
        <h3 class=" card-header text-secondary">Cadastrar cliente <i class="text-info fa  fa-plus" aria-hidden="true"></i></h3>
        <div class="card-body">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label text-secondary"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cpf" class="control-label text-secondary"></label>
                        <input asp-for="Cpf" class="form-control" id="cpf"/>
                        <span asp-validation-for="Cpf" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefone" class="control-label text-secondary"></label>
                        <input asp-for="Telefone" class="form-control" id="tel" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VendedorID" class="control-label text-secondary">Vendedor</label>
                        <select asp-for="VendedorID" class="form-control" asp-items="ViewBag.VendedorID"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-sm btn-outline-success" />
                    </div>
                </form>
                <a class="text-secondary" asp-action="Index">Voltar</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
