@model CRUD.ViewModel.ClienteViewModel

<div class="row" style="padding:45px 0px 40px 0px;">
    <div class="card" style="width: 90%;">
        <h4 class=" card-header text-secondary">Detalhe cliente <i class="text-info fa fa fa-user"></i></h4>
        <div class="card-body">
            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        ID
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                    <dt class="col-sm-2">
                        Nome
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        Cpf
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cpf)
                    </dd>
                    <dt class="col-sm-2">
                        Telefone
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Telefone)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Vendedor)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Vendedor.Nome)
                    </dd>
                </dl>
            </div>
            <hr />
            <h4 class=" mt-4 text-secondary">Produtos do cliente <i class="text-info fa fa-cart-plus"></i></h4>
            <div class="row">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Nome
                            </th>
                            <th>
                                Telefone
                            </th>
                            <th>
                                Data de registro
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var produto in Model.Produtos)
                         {
                        <tr>
                            <td>
                                @produto.Descricao
                            </td>
                            <td>
                                @produto.Valor
                            </td>
                            <td>
                                @produto.CriadoEm
                            </td>
                            <td>
                                <a asp-action="Edit" asp-controller="Produto" asp-route-id="@produto.ID"><i class="text-info fa fa-edit" aria-hidden="true"></i></a>
                                <a asp-action="Details" asp-controller="Produto" asp-route-id="@produto.ID"><i class="text-info ml-1 fa fa-search-plus" aria-hidden="true"></i></a>
                                <a asp-action="Delete" asp-controller="Produto" asp-route-id="@produto.ID"><i class="text-info ml-1 fa fa-times-circle" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div>
                <a class="btn btn-sm btn-outline-primary" asp-action="Index">Voltar</a>
            </div>
        </div>
    </div>
</div>


