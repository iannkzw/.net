@model CRUD.ViewModel.ProdutoViewModel

<div class="row" style="padding-top:60px;">
    <div class="card col-8 offset-1" style="width: 70%;">
        <h3 class=" card-header text-secondary">Editar cliente <i class="text-info fa fa-edit" aria-hidden="true"></i></h3>
        <div class="card-body">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group">
                        <label asp-for="Descricao" class="control-label text-secondary"></label>
                        <input asp-for="Descricao" class="form-control" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Valor" class="control-label text-secondary"></label>
                        <input asp-for="Valor" class="form-control" id="money" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClienteID" class="control-label text-secondary">Cliente</label>
                        <select asp-for="ClienteID" class="form-control" asp-items="ViewBag.ClienteID"></select>
                        <span asp-validation-for="ClienteID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-sm btn-outline-success" />
                    </div>
                </form>
                <a class="text-secondary" asp-action="Index">Voltar</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

