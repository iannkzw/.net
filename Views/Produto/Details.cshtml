@model CRUD.ViewModel.ProdutoViewModel

<div class="row" style="padding:45px 0px 40px 0px;">
    <div class="card" style="width: 90%;">
        <h4 class=" card-header text-secondary">Detalhe do produto <i class="text-info fa fa-cart-plus"></i></h4>
        <div class="card-body">
            <div>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Descricao)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Descricao)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Valor)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Valor)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CriadoEm)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CriadoEm)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Cliente)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Cliente.Nome)
                        </dd>
                    </dl>
            </div>
            <div>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@Model.ID">Editar</a> 
                <hr />
                <a class="text-secondary" asp-action="Index">Voltar</a>
            </div>
        </div>
    </div>
</div>




